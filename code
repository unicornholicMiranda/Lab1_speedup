#include <vector>
#include <iostream>
#include "cfiddle.hpp"
#include "nibble.hpp"

extern "C" uint64_t nibble_search(uint8_t query, const std::vector<uint16_t> & targets) {
    uint64_t total = 0;
    uint64_t ary[65536];
    
    for(auto i: ary)
    {
        uint64_t count = 0;
        for(int b = 0; b < 16 - 4; b++) {
            uint8_t extracted = ((i >> b) & (0xf));
            if (extracted == query) {
                count+=1;
            }
        }
        ary[i] = count;
    }
    
    for(auto & i: targets) {
        total+=ary[i];
    }
    
    return total;
}
